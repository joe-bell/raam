{
  "name": "@raam/tailwind",
  "version": "0.2.3",
  "description": "Beautifully boring cosmetic-free Tailwind styles for structure and layout.",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "microbundle --no-compress --jsx React.createElement --tsconfig tsconfig.json",
    "clean": "rimraf {dist,.rts2*}",
    "dev": "yarn build -- watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joe-bell/raam.git"
  },
  "author": "Joe Bell <joe@joebell.co.uk>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/joe-bell/raam/issues"
  },
  "homepage": "https://github.com/joe-bell/raam#readme",
  "bundlesize": [
    {
      "path": "./dist/**/*.js",
      "maxSize": "2 kB"
    }
  ],
  "peerDependencies": {
    "tailwindcss": ">= 2.0.3"
  },
  "dependencies": {
    "@raam/core": "^0.2.3"
  },
  "devDependencies": {
    "tailwindcss": "2.0.3"
  }
}
