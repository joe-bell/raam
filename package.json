{
  "private": true,
  "name": "root",
  "scripts": {
    "build": "lerna run prebuild && lerna run build",
    "clean": "lerna run clean && lerna clean --yes && rimraf node_modules",
    "dev": "lerna run dev --parallel",
    "lint": "lerna run lint && yarn lint:es -- .",
    "lint:es": "eslint --ignore-path .gitignore --fix --ext .js,.jsx,.ts,.tsx",
    "lint:ts": "lerna run lint:ts",
    "test": "jest"
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,html,css,md,mdx,yml}": "npx prettier --write",
    "*.{js,jsx,ts,tsx}": [
      "yarn lint:ts",
      "yarn lint:es"
    ]
  },
  "jest": {
    "testMatch": [
      "**/packages/**/test/*.{ts,tsx}"
    ],
    "snapshotSerializers": [
      "jest-emotion"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@types/node": "13.9.8",
    "@types/react": "16.9.30",
    "@types/styled-system": "5.1.9",
    "@types/theme-ui": "0.3.1",
    "@typescript-eslint/eslint-plugin": "2.25.0",
    "@typescript-eslint/parser": "2.25.0",
    "babel-jest": "^25.3.0",
    "barrelsby": "^2.2.0",
    "commitizen": "4.0.3",
    "csstype": "2.6.10",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.19.0",
    "husky": "4.2.3",
    "jest": "^25.3.0",
    "jest-emotion": "^10.0.32",
    "lerna": "3.15.0",
    "lint-staged": "10.0.9",
    "microbundle": "0.11.0",
    "prettier": "1.19.1",
    "react-test-renderer": "^16.13.1",
    "rimraf": "3.0.2",
    "typescript": "3.8.3"
  }
}
