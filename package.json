{
  "private": true,
  "name": "root",
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna run clean",
    "flush": "yarn clean && lerna clean --yes && rimraf node_modules",
    "dev": "lerna run dev --parallel",
    "lint": "lerna exec --parallel --stream -- tsc --noEmit",
    "format": "prettier --write",
    "bundlesize": "lerna exec --ignore docs -- bundlesize",
    "test": "yarn bundlesize && jest",
    "commit": "git-cz",
    "docs": "yarn workspace docs"
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "testMatch": [
      "**/packages/**/test/*.test.{ts,tsx}"
    ],
    "snapshotSerializers": [
      "jest-emotion"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.11.6",
    "@babel/plugin-transform-spread": "7.12.1",
    "@babel/preset-env": "7.11.5",
    "@babel/preset-react": "7.10.4",
    "@babel/preset-typescript": "7.10.4",
    "@types/node": "14.11.8",
    "@types/react": "16.9.52",
    "babel-jest": "26.5.2",
    "bundlesize": "0.18.0",
    "commitizen": "4.1.2",
    "cz-conventional-changelog": "3.3.0",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "jest-emotion": "10.0.32",
    "lerna": "3.22.1",
    "lint-staged": "10.2.13",
    "microbundle": "0.13.0",
    "prettier": "2.1.2",
    "react-test-renderer": "16.13.1",
    "rimraf": "3.0.2",
    "typescript": "4.0.2"
  }
}
